<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/lTutor"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >

    <ImageView
        android:id="@+id/tutorsTile_IMG_Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/black"
        android:clickable="false"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="vertical"
     >

        <TextView
            android:id="@+id/tutorsTile_TXT_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tutor name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tutorsTile_TXT_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tutorsTile_TXT_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="false"
            android:text="Price"
            />

        <TextView
            android:id="@+id/tutorsTile_TXT_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:clickable="false"
            android:text="1"
            />
    </LinearLayout>

</LinearLayout>